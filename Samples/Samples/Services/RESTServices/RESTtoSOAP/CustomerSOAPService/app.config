<?xml version="1.0"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
  </startup>

  <system.serviceModel>
    <services>
      <service name="Neuron.Samples.CustomerSOAP.CustomerService" behaviorConfiguration="serviceBehavior">
        <!-- use host/baseAddresses to configure base address provided by host -->
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8002"/>
          </baseAddresses>
        </host>
        <!-- use base address specified above, provide one endpoint -->
        <endpoint address="http://localhost:8012/Customer" binding="basicHttpBinding" bindingConfiguration="Binding" contract="Neuron.Samples.CustomerSOAP.ICustomerService"/>
      </service>
    </services>

    <bindings>
      <basicHttpBinding>
        <binding name="Binding">
          <security mode="None"/>
        </binding>
      </basicHttpBinding>
    </bindings>

    <behaviors>
      <serviceBehaviors>
        <behavior name="serviceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>
</configuration>
